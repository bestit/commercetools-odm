    <rule ref="./vendor/bestit/php_codesniffer/src/Standards/BestIt/ruleset.xml">
        <exclude name="BestIt.DocTags.DisallowedClassTags.TagNotAllowed" />
        <exclude name="BestIt.DocTags.DisallowedConstantTags.TagNotAllowed" />
        <exclude name="BestIt.DocTags.DisallowedMethodTags.TagNotAllowed" />
        <exclude name="BestIt.DocTags.DisallowedPropertyTags.TagNotAllowed" />
