<?xml version="1.0"?>
<ruleset name="bestit/commercetools-odm">
    <config name="testVersion" value="7.0" />

    <rule ref="./vendor/best-it/php_codesniffer/src/Standards/BestIt/ruleset.xml">
        <exclude name="BestIt.DocTags.DisallowedClassTags.TagNotAllowed" />
        <exclude name="BestIt.DocTags.DisallowedConstantTags.TagNotAllowed" />
        <exclude name="BestIt.DocTags.DisallowedMethodTags.TagNotAllowed" />
        <exclude name="BestIt.DocTags.DisallowedPropertyTags.TagNotAllowed" />
        <exclude name="BestIt.Formatting.AlphabeticallySortedUses.IncorrectlyOrderedUses" />
        <exclude name="BestIt.TypeHints.ReturnTypeDeclaration.MissingReturnTypeHint" />
        <exclude name="BestIt.DocTags.RequiredClassTags.TagOccurrenceMinAuthor" />
        <exclude name="BestIt.DocTags.RequiredMethodTags.TagOccurrenceMinReturn" />
        <exclude name="PSR12.ControlStructures.ControlStructureSpacing.CloseParenthesisLine" />
        <exclude name="PSR12.ControlStructures.ControlStructureSpacing.FirstExpressionLine" />
        <exclude name="SlevomatCodingStandard.Classes.ClassConstantVisibility.MissingConstantVisibility" />
        <exclude name="SlevomatCodingStandard.TypeHints.DeclareStrictTypes.DeclareStrictTypesMissing" />
    </rule>

    <file>./src/</file>
    <exclude-pattern>*/src/Mapping/Annotations/*</exclude-pattern>
    <file>./tests/</file>
</ruleset>
